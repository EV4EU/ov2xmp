    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/ov2xmp/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:8000"
            ],
            "django": true,
            "justMyCode": true
        },
        {
            "name": "Python: Sanic",
            "type": "python",
            "request": "launch",
            "module": "sanic",
            "cwd": "${workspaceFolder}/ov2xmp/",
            "args": [
                "csms:app",
                "--host=0.0.0.0",
                "--port=9000"
            ],
            "jinja": true
        }
    ]
}
